body
	text-align center
	
.container
	float left
	border solid red 1px
	color black
	
	&.title
		width 100%
		font-size 36px
		margin-top 120px
		text-align center
		
	&.profile-caption
		width 100%
		font-size 24px
		margin-top 60px
		text-align center
		
	&.profile-credentials
		width 50%
		margin-top 40px
		margin-left 25%
		margin-right auto
		margin-bottom 30px
		font-size 20px
		padding 5px
		text-align center
		form.profile-form
			margin-top 20px
			margin-bottom 20px
			label
				font-size 14px
			input[type=text], input[type=password]
				width 60%
				height 30px
			input.profile-submit
				min-width 80px
				padding-left 10px
				padding-right 10px
				height 30px
				font-size 14px
				
	&.signup
		width 100%
		text-align center
		font-size 16px
				
	&.banner
		width 100%
		height 80px
		margin-bottom 10px
		
	&.upper-banner
		width 100%
		height 20px
		line-height 20px
		text-align right	
		a
			padding-right 20px
			font-size 14px
		
	&.lower-banner
		width 100%
		height 60px
		line-height 60px
		text-align center
		font-size 32px
		
	&.left-panel
		width 65%
		padding 2px
		margin-left 10px
		
	&.upper-left-section
		width 98%
		padding 2px
		margin-left 5px
		margin-bottom 10px
			
	&.project-selection
		width 58%
		margin-top 5px
		margin-left 10px
		min-height 100px		
		form
			margin-top 10px
			margin-left 20px
			margin-bottom 20px
			label
				font-size 16px		
			select
				width 90%
				height 30px
		
	&.wireframes
		width 37%
		margin-top 5px
		margin-left 10px
		min-height 100px
		text-align center
		padding 5px
				
	&.lower-left-section
		width 98%
		padding 2px
		margin-left 5px
		margin-bottom 10px
			
	&.user-stories
		width 98%
		margin-top 5px
		margin-bottom 10px
		min-height 100px
		text-align center
		padding 5px
		.user-story-item
			width 96%
			height 100px
			margin-left 10px
			margin-bottom 5px
			padding 5px
			text-align left
			
	&.right-panel
		width 32%
		padding 2px
		margin-left 10px
	
	&.task-list
		width 98%
		min-height 100px
		margin-top 5px
		margin-bottom 10px
		text-align center
		padding 5px
		.task-list-item
			width 95%
			height 60px
			margin-left 5px
			margin-bottom 5px
			padding 5px
			text-align left
		
//end .container



